# D&B API Configuration
DNB_USERNAME=your_dnb_username
DNB_PASSWORD=your_dnb_password
DNB_ENVIRONMENT=sandbox
DNB_API_VERSION=5.0
DNB_AUTH_VERSION=2.0

# Mock Mode (set to false when using real credentials)
USE_MOCK_DATA=true

# API Configuration
API_TITLE=D&B Direct 2.0 API Service
API_DESCRIPTION=FastAPI wrapper for Dun & Bradstreet Direct 2.0 REST API
API_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Token Management
TOKEN_REFRESH_INTERVAL=86400

# Rate Limiting
RATE_LIMIT_QPS=10

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated origins)
CORS_ORIGINS=*

# Redis (Optional - for distributed token caching)
# REDIS_URL=redis://localhost:6379/0
